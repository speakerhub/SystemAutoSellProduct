    <script>
        $(document).ready(function() {
            $.ajax({
                url: "/get-data-wishlist",
                method: "GET",
                success: function(response) {
                    let html = '';
                    response.cart.forEach((item, index) => {
                        html += `<tr id="row-${index}">
                                    <td class="align-middle"><img src="/uploads/${item.ImageUrl}" alt="${item.ImageUrl}" style="width: 50px;"> ${item.ProductName}</td>
                                    <td class="align-middle">${item.Color}</td>
                                    <td class="align-middle">${item.Size}</td>
                                    <td class="align-middle">${item.Price}</td>
                                    <td class="align-middle">
                                        <div class="input-group quantity mx-auto" style="width: 100px;">
                                            <div class="input-group-btn">
                                                <button class="btn btn-sm btn-primary btn-minus" data-index="${index}">
                                                <i class="fa fa-minus"></i>
                                                </button>
                                            </div>
                                            <input type="text" id="count-${index}" class="form-control form-control-sm bg-secondary border-0 text-center" value="${item.ProductCount}">
                                            <div class="input-group-btn">
                                                <button class="btn btn-sm btn-primary btn-plus" data-index="${index}">
                                                    <i class="fa fa-plus"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="align-middle" id="total-${index}">${item.Price * item.ProductCount}</td>
                                    <td class="align-middle"><button class="btn btn-sm btn-danger btn-delete" data-productid="${item.id}"><i class="fa fa-times"></i></button></td>
                                    <td class="align-middle"><button class="btn btn-sm btn-danger btn-add" data-productid="${item.id}"><i class="fa fa-plus"></i></button></td>
                                </tr>
                                `;
                        // console.log(item);
                    })

                    

                    $('.align-middle').html(html);

                    $('.btn-minus').click(function() {
                        let index = $(this).data('index');
                        let countInput = $(`#count-${index}`);
                        let totalCell = $(`#total-${index}`);
                        let quantity = parseInt(countInput.val());

                        if (quantity > 1) {
                            quantity = quantity - 1;
                            countInput.val(quantity);
                            totalCell.text(response.cart[index].Price * quantity);
                            $.ajax({
                                url: `/update-cart/${index}/`,
                                method: "PUT",
                                data: {
                                    quantity: quantity
                                },
                                success: function(response) {
                                    // console.log('Updated product count:', response);
                                    // subtotal();
                                }
                            })
                            // subtotal();
                        }                        
                    });

                    $('.btn-plus').click(function() {
                        let index = $(this).data('index');
                        let countInput = $(`#count-${index}`);
                        let totalCell = $(`#total-${index}`);
                        let quantity = parseInt(countInput.val());

                        quantity++;
                        countInput.val(quantity);
                        totalCell.text(response.cart[index].Price * quantity);
                        $.ajax({
                            url: `/update-cart/${index}/`,
                            method: "PUT",
                            data: {
                                quantity: quantity
                            },
                            success: function(response) {
                                //console.log('Updated product count:', response);
                            }
                        })
                        // subtotal();
                    });

                    $('.btn-delete').click( function() {
                        let productId = $(this).data('productid');
                        // console.log('Deleting product with ID:', productId);

                        $.ajax({
                            url: `/remove-from-carts/${productId}`,
                            method: "DELETE",
                            success: function(response) {
                                alert(response.message);
                                window.location.reload();
                            }
                        });
                    });

                }
            });

            $.ajax({
                url: `/cart-count`,
                type: 'GET',
                success: (response) => {
                    $('.cart-count').text(response.totalItems);
                }
            });

        });

        $('#search').on('input', () => {
            let keyword = $('#search').val();

            if (keyword) {
                $.ajax({
                    url: `/search-products/${keyword}`,
                    method: 'GET',
                    success: (response) => {
                        let html = '';

                        if (response.products && response.products.length > 0) {
                            response.products.forEach(product => {
                                html += `
                                    <div class="search-item card">
                                        <div style="display: flex;">
                                            <img class="avatar-xl" src="/uploads/${product.ImageUrl ? product.ImageUrl : 'default-image.png'}" alt="${product.ProductName}">
                                            <a class="btn btn-outline-dark" href="/productDetail/${product.id}">${product.ProductName}</a>
                                        </div>
                                        <p>${product.Description}</p>
                                    </div>
                                `;
                            });
                        } else {
                            html = '<p>No products found</p>';
                        }

                        // Hiển thị kết quả tìm kiếm trong #search-result
                        $('#search-result').html(html).addClass('active');
                    },
                    error: (err) => {
                        console.error('Search request failed:', err);
                        $('#search-result').html('<p>Error occurred during search.</p>').addClass('active');
                    }
                });
            } else {
                // Nếu không có từ khóa, xóa kết quả tìm kiếm
                $('#search-result').removeClass('active').html('');
            }
        });
       
    </script>
